@import "./assets/stylus/blue"

.el-message-box
    background-color #454b5d!important
    border 1px solid #454b5d!important
    .el-message-box__header
        button
            display none
    .el-message-box__content
        color $tips-text-color
        text-align center
    .el-message-box__btns
        width 70%
        text-align center
        margin 0 auto
        .el-button--primary
            background-color #343946
            border 1px solid #454b5d
@media screen and (max-width: 760px)
    .el-message-box
        width 60%
        .el-message-box__header
            button
                display none
        .el-message-box__content
            color $tips-text-color
            text-align center
        .el-message-box__btns
            width 70%
            text-align center
            margin 0 auto
            .el-button--primary
                background-color #343946!important
                border 1px solid #454b5d!important
//覆盖一些element-ui样式
@media screen and (max-width: 760px)
    .el-input.el-input--suffix
        .el-input__inner
            // width 100px!important
            height 100%
            padding-right 0
            border none
.el-select
    .el-input.el-input--suffix
        display flex
        height 100%
        .el-input__inner
            width 270px
            height 100%
            padding-right 0
            border none
        .el-input__suffix
            width 0
            height 0
            .el-input__suffix-inner
                border none
                width 0
                height 0
.el-picker-panel.el-date-picker.el-popper.has-time
    button
        width auto
.el-date-editor.el-input.el-input--mini.el-input--prefix.el-input--suffix.el-date-editor--datetime
    display flex
    .el-input__inner
        height 22px !important
        line-height 22px !important
        border none
        padding-left 18px 
        // padding-right 22px
    .el-input__icon.el-icon-time
        line-height 22px
    .el-input__prefix,.el-input__suffix
        top -2px
    .el-input__prefix
        left -5px
@media screen and (max-width: 760px) and (min-width: 320px)
    .el-select
        .el-input.el-input--suffix
            display flex
            height 100%
            .el-input__inner
                width 160px
                height 100%
                padding-right 0
                border none
                line-height 25px
                margin-bottom 10px
            .el-input__suffix
                width 10px
                height 10px
                .el-input__suffix-inner
                    width 0
                    height 0
    .el-select
        width 95%
    .el-picker-panel.el-date-picker.el-popper.has-time
        width 90%
        left 5% !important
        top 10vh !important
        .el-picker-panel__content
            width: auto !important
        .popper__arrow
            display none
@media screen and (max-width: 320px)
    .el-select .el-input.el-input--suffix .el-input__inner
        width 100px